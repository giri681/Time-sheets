<div class='nested-fields'>
  <div class="field">
    <%= f.label :project %>
    <%= f.select :project_id, options_for_select(@projects) %>
  </div>
  <div class="field">
    <%= f.label :time %>
    <%= f.time_field :time %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <%= link_to_remove_association "remove", f %>
</div>